{
  "name": "sovereign-lines",
  "version": "1.0.0",
  "description": "Sovereign Lines - An online real-time strategy game",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run start:client\" \"npm run start:server-dev\" --kill-others",
    "dev:safe": "npm run start:client-only",
    "start:client": "webpack serve --mode development",
    "start:client-only": "webpack serve --mode development --no-client-overlay",
    "start:server-dev": "tsx watch src/server/Server.ts",
    "build-dev": "webpack",
    "build-prod": "cross-env NODE_OPTIONS=--max-old-space-size=8192 webpack --mode production",
    "build-map": "tsx ./src/scripts/generateTerrainMaps.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write src/",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sovereign-lines/sovereign-lines.git"
  },
  "author": "Sovereign Lines Team",
  "license": "Dual-licensed: GPL-3.0 (client) and Proprietary (server/core)",
